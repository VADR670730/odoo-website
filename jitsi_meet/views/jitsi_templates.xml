<?xml version="1.0"?>
<openerp>
    <data>
        <template id="lobby" name="Lobby">
            <script type="text/javascript" src="/jitsi_meet/static/src/js/jitsi.js" />
            <t t-call="website.layout">
                <div class="oe_structure"/>
                <div id="event_info" class="container">
                    <div class="oe_structure oe_empty"/>
                    <br />
                    <center>
                        <t t-foreach="meetings" t-as="jitsi_model">
                            <t t-foreach="jitsi_model" t-as="jitsi_record">
                                <t t-set="jitsi_user_info" t-value="jitsi_record.get_jitsi_user_info()"/>
                                <span>
                                    <h3>Lobby f√∂r evenemang</h3>
                                    <h1>
                                        <span t-field="jitsi_record.jitsi_id.name"/>
                                    </h1>
                                    <t t-if="jitsi_record.jitsi_state == 'planned'">
                                        <h2>Starts: <span t-field="jitsi_record.jitsi_id.date_formated"/>
                                        </h2>
                                        <h2>Ends: <span t-field="jitsi_record.jitsi_id.date_end_formated"/>
                                        </h2>
                                        <div class="btn-group mt16 mb16">
                                            <a t-att-href="jitsi_record.jitsi_id.url" type="button" class="btn btn-primary">join</a>
                                        </div>
                                    </t>
                                    <t t-if="jitsi_record.jitsi_state == 'current'">
                                        <h2>Ongoing</h2>
                                        <h2>Ends: <span t-field="jitsi_record.jitsi_id.date_end"/>
                                        </h2>
                                        <div class="btn-group mt16 mb16">
                                            <a t-att-href="jitsi_record.jitsi_id.url" type="button" class="btn btn-primary">join</a>
                                        </div>
                                    </t>
                                    <t t-if="jitsi_record.jitsi_state == 'finished'">
                                        <h2>The event was ended <span t-field="jitsi_record.jitsi_id.date_end"/>
                                        </h2>
                                    </t>
                                </span>
                            </t>
                        </t>
                    </center>
                    <br />
                </div>
                <div class="oe_structure oe_empty"/>
            </t>
        </template>
    </data>
</openerp>
